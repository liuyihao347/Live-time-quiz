{
  "name": "live-time-quiz-mcp",
  "version": "3.0.0",
  "description": "MCP服务 + Electron GUI - 自动弹出测验窗口",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc && npm run copy-renderer",
    "copy-renderer": "xcopy /Y /I electron\\renderer dist\\electron\\renderer 2>nul || cp -r electron/renderer dist/electron/ 2>/dev/null || true",
    "start": "node dist/index.js",
    "electron": "electron dist/electron/main.js",
    "dev": "tsx src/index.ts",
    "dev:electron": "npm run build && electron dist/electron/main.js",
    "watch": "tsc --watch",
    "prepare": "npm run build"
  },
  "keywords": [
    "mcp",
    "quiz",
    "learning",
    "electron",
    "gui",
    "ai"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@electron/remote": "^2.1.3",
    "@modelcontextprotocol/sdk": "^1.0.4",
    "electron": "^34.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
